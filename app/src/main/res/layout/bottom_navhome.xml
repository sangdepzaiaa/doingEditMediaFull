<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bgBar"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:layout_marginHorizontal="18dp"
        android:layout_marginBottom="11dp"
        android:elevation="10dp"
        android:background="@drawable/bg_round_8_border"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/ll_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/bgBar"
        app:layout_constraintEnd_toStartOf="@+id/btnCut2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bgBar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imghome"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/home" />

        <TextView
            android:id="@+id/txvhome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/home"
            android:textColor="#E65100"
            android:textSize="12sp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnCut2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.2"
        android:scaleType="centerInside"
        android:src="@drawable/cut_home"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@id/bgBar"
        app:layout_constraintEnd_toStartOf="@+id/ll_setting"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ll_home"
        app:layout_constraintTop_toTopOf="@id/bgBar" />

    <LinearLayout
        android:id="@+id/ll_setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="@id/bgBar"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="10dp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCut2"
        app:layout_constraintTop_toTopOf="@id/bgBar">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgsetting"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/setting_home" />

        <TextView
            android:id="@+id/txvsetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:text="@string/setting"
            android:textColor="#FFB74D"
            android:textSize="12sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

