<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_round_8_border"
    android:clipToOutline="true"
    android:paddingBottom="24dp">

    <TextView
        android:id="@+id/tvHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/figtree_semi_bold"
        android:includeFontPadding="false"
        android:text="@string/upload_image"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_close"
        app:layout_constraintBottom_toBottomOf="@id/tvHeader"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvHeader" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/figtree_regular"
        android:includeFontPadding="false"
        android:text="@string/select_how_to_upload_images"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvHeader" />

    <!-- View nền cho Camera -->
    <!-- Background container -->
    <View
        android:id="@+id/vCamera"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/bg_round_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/vImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvContent" />

    <!-- Icon camera - căn chính giữa vCamera -->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_camera"
        app:layout_constraintEnd_toEndOf="@+id/vCamera"
        app:layout_constraintStart_toStartOf="@+id/vCamera"
        app:layout_constraintBottom_toTopOf="@+id/tvCamera"
        app:layout_constraintTop_toTopOf="@+id/vCamera" />
    <!-- 4 constraint trên sẽ tự động căn giữa cả ngang và dọc -->

    <!-- Text "Camera" nằm dưới icon và căn giữa ngang -->
    <TextView
        android:id="@+id/tvCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/figtree_regular"
        android:includeFontPadding="false"
        android:text="@string/camera"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vCamera"
        app:layout_constraintEnd_toEndOf="@+id/vCamera"
        app:layout_constraintStart_toStartOf="@+id/vCamera"
        app:layout_constraintTop_toBottomOf="@id/icCamera" />

    <View
        android:id="@+id/vImage"
        android:layout_width="160dp"
        android:layout_height="90dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_round_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/vCamera"
        app:layout_constraintTop_toBottomOf="@id/tvContent" />

    <!-- Icon Gallery - căn chính giữa tuyệt đối vImage -->

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_marginTop="10dp"
        android:id="@+id/icPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_photo"
        app:layout_constraintBottom_toTopOf="@+id/tvPhoto"
        app:layout_constraintEnd_toEndOf="@+id/vImage"
        app:layout_constraintHorizontal_bias="0.508"
        app:layout_constraintStart_toStartOf="@+id/vImage"
        app:layout_constraintTop_toTopOf="@+id/vImage" />

    <TextView
        android:layout_marginBottom="7dp"
        android:id="@+id/tvPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:fontFamily="@font/figtree_regular"
        android:includeFontPadding="false"
        android:text="@string/gallery"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/vImage"
        app:layout_constraintEnd_toEndOf="@+id/vImage"
        app:layout_constraintStart_toStartOf="@+id/vImage"
        app:layout_constraintTop_toBottomOf="@id/icPhoto" />

</androidx.constraintlayout.widget.ConstraintLayout>